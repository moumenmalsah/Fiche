import React, { useState, useEffect } from 'react';
import { 
  FileText, 
  Trash2, 
  GripVertical, 
  Download, 
  Copy, 
  BookOpen, 
  Clock, 
  Users, 
  Monitor, 
  Briefcase,
  Lightbulb
} from 'lucide-react';

// --- Données et Constantes ---

const BLOOM_TAXONOMY = {
  "Connaissance": ["Définir", "Identifier", "Nommer", "Lister", "Rappeler", "Reconnaître"],
  "Compréhension": ["Expliquer", "Résumer", "Paraphraser", "Décrire", "Illustrer", "Interpréter"],
  "Application": ["Appliquer", "Utiliser", "Démontrer", "Calculer", "Résoudre", "Adapter"],
  "Analyse": ["Analyser", "Comparer", "Différencier", "Catégoriser", "Examiner", "Tester"],
  "Synthèse": ["Créer", "Concevoir", "Organiser", "Planifier", "Composer", "Formuler"],
  "Évaluation": ["Évaluer", "Juger", "Critiquer", "Justifier", "Estimer", "Argumenter"]
};

const DEFAULT_STEPS = [
  { id: 'step-1', type: 'Motivation', duration: '5 min', profActivity: '', studentActivity: '', method: 'Interrogative', resources: 'Tableau' },
  { id: 'step-2', type: 'Construction', duration: '20 min', profActivity: '', studentActivity: '', method: 'Active/Découverte', resources: 'PC, Vidéoprojecteur' },
  { id: 'step-3', type: 'Généralisation', duration: '15 min', profActivity: '', studentActivity: '', method: 'Expositive', resources: 'Tableau' },
  { id: 'step-4', type: 'Évaluation', duration: '10 min', profActivity: '', studentActivity: '', method: 'Individuelle', resources: 'Quiz/Exercice' },
  { id: 'step-5', type: 'Trace', duration: '10 min', profActivity: '', studentActivity: '', method: 'Dictée/Copie', resources: 'Cahier' },
];

const STEP_TYPES = ['Motivation', 'Construction', 'Généralisation', 'Évaluation', 'Trace', 'Remédiation'];

// --- Composants ---

export default function App() {
  const [activeTab, setActiveTab] = useState('edit'); // 'edit' or 'preview'
  const [showBloom, setShowBloom] = useState(false);

  // État de la fiche
  const [fiche, setFiche] = useState({
    etablissement: "Lycée Hassi Berkane",
    professeur: "MALSAH MOUMEN",
    date: new Date().toISOString().split('T')[0],
    niveau: "Tronc Commun",
    module: "Généralités sur les systèmes informatiques",
    titre: "Système Informatique",
    competence: "",
    prerequis: "",
    objectifsGeneraux: "",
    objectifsSpecifiques: "", // Initialisé comme string vide pour éviter le crash .split
    duree: "1h",
    ressourcesNumeriques: "",
    preparation: "",
    moyensMateriels: "Tableau, Ordinateurs, Vidéoprojecteur",
    modalite: "Groupe classe / Binômes",
    deroulement: DEFAULT_STEPS
  });

  // Gestion du Drag and Drop
  const [draggedItemIndex, setDraggedItemIndex] = useState(null);

  const handleDragStart = (e, index) => {
    setDraggedItemIndex(index);
    e.dataTransfer.effectAllowed = "move";
    // Pour Firefox
    e.dataTransfer.setData("text/plain", index);
  };

  const handleDragOver = (e, index) => {
    e.preventDefault();
    e.dataTransfer.dropEffect = "move";
  };

  const handleDrop = (e, index) => {
    e.preventDefault();
    if (draggedItemIndex === null) return;

    const newDeroulement = [...fiche.deroulement];
    const draggedItem = newDeroulement[draggedItemIndex];
    
    // Retirer l'élément de sa position originale
    newDeroulement.splice(draggedItemIndex, 1);
    // L'insérer à la nouvelle position
    newDeroulement.splice(index, 0, draggedItem);

    setFiche({ ...fiche, deroulement: newDeroulement });
    setDraggedItemIndex(null);
  };

  // Actions
  const handleInputChange = (field, value) => {
    setFiche({ ...fiche, [field]: value });
  };

  const addStep = (type = 'Construction') => {
    const newStep = {
      id: `step-${Date.now()}`,
      type: type,
      duration: '10 min',
      profActivity: '',
      studentActivity: '',
      method: '',
      resources: ''
    };
    setFiche({ ...fiche, deroulement: [...fiche.deroulement, newStep] });
  };

  const removeStep = (index) => {
    const newDeroulement = fiche.deroulement.filter((_, i) => i !== index);
    setFiche({ ...fiche, deroulement: newDeroulement });
  };

  const updateStep = (index, field, value) => {
    const newDeroulement = [...fiche.deroulement];
    newDeroulement[index][field] = value;
    setFiche({ ...fiche, deroulement: newDeroulement });
  };

  const copyToClipboard = () => {
    // Force switch to preview to ensure content exists in DOM
    if (activeTab !== 'preview') {
      setActiveTab('preview');
      // Petit délai pour laisser le rendu se faire
      setTimeout(() => performCopy(), 100);
    } else {
      performCopy();
    }
  };

  const performCopy = () => {
    const range = document.createRange();
    const selection = window.getSelection();
    const element = document.getElementById('fiche-preview-content');
    
    if (element) {
      try {
        range.selectNodeContents(element);
        selection.removeAllRanges();
        selection.addRange(range);
        document.execCommand('copy');
        selection.removeAllRanges();
        alert("Fiche copiée ! Vous pouvez coller dans Word/Google Docs.");
      } catch (err) {
        alert("Erreur lors de la copie. Veuillez sélectionner le texte manuellement.");
      }
    }
  };

  const printFiche = () => {
    window.print();
  };

  // --- Rendu ---

  return (
    <div className="min-h-screen bg-gray-50 font-sans text-gray-800">
      {/* Header - Masqué à l'impression */}
      <header className="bg-indigo-700 text-white p-4 shadow-md print:hidden sticky top-0 z-50">
        <div className="max-w-7xl mx-auto flex justify-between items-center">
          <div className="flex items-center space-x-2">
            <BookOpen className="h-6 w-6" />
            <h1 className="text-xl font-bold hidden md:block">Fiche Pédagogique Creator</h1>
            <span className="text-xs bg-indigo-800 px-2 py-1 rounded md:hidden">Fiche Creator</span>
          </div>
          <div className="flex space-x-2">
             <button 
              onClick={() => setActiveTab('edit')}
              className={`px-3 py-2 rounded-md flex items-center space-x-2 transition text-sm ${activeTab === 'edit' ? 'bg-white text-indigo-700 font-bold' : 'bg-indigo-600 hover:bg-indigo-500'}`}
            >
              <FileText className="h-4 w-4" />
              <span className="hidden sm:inline">Éditer</span>
            </button>
            <button 
              onClick={() => setActiveTab('preview')}
              className={`px-3 py-2 rounded-md flex items-center space-x-2 transition text-sm ${activeTab === 'preview' ? 'bg-white text-indigo-700 font-bold' : 'bg-indigo-600 hover:bg-indigo-500'}`}
            >
              <Monitor className="h-4 w-4" />
              <span className="hidden sm:inline">Aperçu</span>
            </button>
            <button onClick={printFiche} className="bg-green-600 hover:bg-green-500 px-3 py-2 rounded-md flex items-center space-x-2 transition text-sm">
              <Download className="h-4 w-4" />
              <span className="hidden sm:inline">PDF</span>
            </button>
            <button onClick={copyToClipboard} className="bg-blue-500 hover:bg-blue-400 px-3 py-2 rounded-md flex items-center space-x-2 transition text-sm">
              <Copy className="h-4 w-4" />
              <span className="hidden sm:inline">Copier</span>
            </button>
          </div>
        </div>
      </header>

      {/* Main Content */}
      <main className="max-w-7xl mx-auto p-4 md:p-8 print:p-0 print:m-0 print:w-full print:max-w-none">
        
        {/* EDIT MODE */}
        <div className={`${activeTab === 'edit' ? 'grid' : 'hidden'} grid-cols-1 lg:grid-cols-3 gap-6 animate-fadeIn print:hidden`}>
            
            {/* Left Column: General Info */}
            <div className="lg:col-span-1 space-y-6">
              
              <div className="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
                <h2 className="text-lg font-bold text-indigo-800 mb-4 flex items-center">
                  <Users className="h-5 w-5 mr-2" />
                  I. Présentation
                </h2>
                
                <div className="space-y-4">
                  <div className="grid grid-cols-2 gap-2">
                    <div>
                      <label className="block text-xs font-bold text-gray-500 uppercase mb-1">Date</label>
                      <input type="text" value={fiche.date} onChange={(e) => handleInputChange('date', e.target.value)} className="w-full p-2 border rounded focus:ring-2 focus:ring-indigo-500 outline-none text-sm" placeholder="JJ/MM/AAAA" />
                    </div>
                    <div>
                      <label className="block text-xs font-bold text-gray-500 uppercase mb-1">Niveau</label>
                      <input type="text" value={fiche.niveau} onChange={(e) => handleInputChange('niveau', e.target.value)} className="w-full p-2 border rounded focus:ring-2 focus:ring-indigo-500 outline-none text-sm" placeholder="ex: 2APIC, Tronc Commun" />
                    </div>
                  </div>
                  
                  <div>
                    <label className="block text-xs font-bold text-gray-500 uppercase mb-1">Enseignant</label>
                    <input type="text" value={fiche.professeur} onChange={(e) => handleInputChange('professeur', e.target.value)} className="w-full p-2 border rounded focus:ring-2 focus:ring-indigo-500 outline-none text-sm" />
                  </div>

                  <div>
                    <label className="block text-xs font-bold text-gray-500 uppercase mb-1">Module</label>
                    <input type="text" value={fiche.module} onChange={(e) => handleInputChange('module', e.target.value)} className="w-full p-2 border rounded focus:ring-2 focus:ring-indigo-500 outline-none text-sm" placeholder="ex: Logiciels" />
                  </div>

                  <div>
                    <label className="block text-xs font-bold text-gray-500 uppercase mb-1">Titre de la Séance</label>
                    <input type="text" value={fiche.titre} onChange={(e) => handleInputChange('titre', e.target.value)} className="w-full p-2 border rounded focus:ring-2 focus:ring-indigo-500 outline-none text-sm font-bold" placeholder="Titre de la leçon" />
                  </div>

                   <div>
                    <label className="block text-xs font-bold text-gray-500 uppercase mb-1">Compétence visée</label>
                    <textarea value={fiche.competence} onChange={(e) => handleInputChange('competence', e.target.value)} rows={3} className="w-full p-2 border rounded focus:ring-2 focus:ring-indigo-500 outline-none text-sm" placeholder="Quelle compétence l'élève va-t-il acquérir ?" />
                  </div>
                   <div>
                    <label className="block text-xs font-bold text-gray-500 uppercase mb-1">Prérequis</label>
                    <textarea value={fiche.prerequis} onChange={(e) => handleInputChange('prerequis', e.target.value)} rows={2} className="w-full p-2 border rounded focus:ring-2 focus:ring-indigo-500 outline-none text-sm" placeholder="Savoirs nécessaires..." />
                  </div>
                </div>
              </div>

              <div className="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
                <div className="flex justify-between items-center mb-4">
                  <h2 className="text-lg font-bold text-indigo-800 flex items-center">
                    <Lightbulb className="h-5 w-5 mr-2" />
                    Objectifs (Bloom)
                  </h2>
                  <button onClick={() => setShowBloom(!showBloom)} className="text-xs text-indigo-600 underline">
                    {showBloom ? "Masquer l'aide" : "Voir verbes Bloom"}
                  </button>
                </div>

                {showBloom && (
                  <div className="bg-indigo-50 p-3 rounded mb-4 text-xs">
                    {Object.entries(BLOOM_TAXONOMY).map(([cat, verbs]) => (
                      <div key={cat} className="mb-2">
                        <span className="font-bold text-indigo-700">{cat}:</span> {verbs.join(', ')}
                      </div>
                    ))}
                  </div>
                )}
                
                <div className="space-y-4">
                  <div>
                    <label className="block text-xs font-bold text-gray-500 uppercase mb-1">Objectifs Généraux</label>
                    <textarea value={fiche.objectifsGeneraux} onChange={(e) => handleInputChange('objectifsGeneraux', e.target.value)} rows={2} className="w-full p-2 border rounded focus:ring-2 focus:ring-indigo-500 outline-none text-sm" />
                  </div>
                   <div>
                    <label className="block text-xs font-bold text-gray-500 uppercase mb-1">Objectifs Spécifiques (Verbes d'action)</label>
                    <textarea value={fiche.objectifsSpecifiques} onChange={(e) => handleInputChange('objectifsSpecifiques', e.target.value)} rows={4} className="w-full p-2 border rounded focus:ring-2 focus:ring-indigo-500 outline-none text-sm" placeholder="- Définir le concept de...&#10;- Appliquer la règle de..." />
                  </div>
                </div>
              </div>

               <div className="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
                <h2 className="text-lg font-bold text-indigo-800 mb-4 flex items-center">
                  <Clock className="h-5 w-5 mr-2" />
                  II. Organisation
                </h2>
                <div className="space-y-4">
                  <div className="grid grid-cols-2 gap-4">
                    <div>
                      <label className="block text-xs font-bold text-gray-500 uppercase mb-1">Durée</label>
                      <input type="text" value={fiche.duree} onChange={(e) => handleInputChange('duree', e.target.value)} className="w-full p-2 border rounded focus:ring-2 focus:ring-indigo-500 outline-none text-sm" />
                    </div>
                     <div>
                      <label className="block text-xs font-bold text-gray-500 uppercase mb-1">Modalité</label>
                      <input type="text" value={fiche.modalite} onChange={(e) => handleInputChange('modalite', e.target.value)} className="w-full p-2 border rounded focus:ring-2 focus:ring-indigo-500 outline-none text-sm" />
                    </div>
                  </div>
                  <div>
                    <label className="block text-xs font-bold text-gray-500 uppercase mb-1">Ressources Numériques</label>
                    <input type="text" value={fiche.ressourcesNumeriques} onChange={(e) => handleInputChange('ressourcesNumeriques', e.target.value)} className="w-full p-2 border rounded focus:ring-2 focus:ring-indigo-500 outline-none text-sm" placeholder="Fichiers, Liens, Logiciels..." />
                  </div>
                  <div>
                    <label className="block text-xs font-bold text-gray-500 uppercase mb-1">Moyens Matériels</label>
                    <input type="text" value={fiche.moyensMateriels} onChange={(e) => handleInputChange('moyensMateriels', e.target.value)} className="w-full p-2 border rounded focus:ring-2 focus:ring-indigo-500 outline-none text-sm" />
                  </div>
                   <div>
                    <label className="block text-xs font-bold text-gray-500 uppercase mb-1">Préparation de l'enseignant</label>
                    <textarea value={fiche.preparation} onChange={(e) => handleInputChange('preparation', e.target.value)} rows={2} className="w-full p-2 border rounded focus:ring-2 focus:ring-indigo-500 outline-none text-sm" placeholder="Ce que vous devez préparer avant..." />
                  </div>
                </div>
              </div>

            </div>

            {/* Right Column: Sequence Builder (Drag & Drop) */}
            <div className="lg:col-span-2 space-y-6">
              <div className="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
                <div className="flex justify-between items-center mb-6">
                   <h2 className="text-lg font-bold text-indigo-800 flex items-center">
                    <Briefcase className="h-5 w-5 mr-2" />
                    III. Déroulement de la séance
                  </h2>
                  <div className="flex space-x-2 flex-wrap gap-y-2 justify-end">
                    {STEP_TYPES.map(type => (
                       <button 
                        key={type}
                        onClick={() => addStep(type)}
                        className="text-xs bg-gray-100 hover:bg-gray-200 text-gray-700 px-2 py-1 rounded border border-gray-300 transition"
                      >
                        + {type}
                      </button>
                    ))}
                  </div>
                </div>

                <div className="space-y-4">
                  {fiche.deroulement.map((step, index) => (
                    <div 
                      key={step.id} 
                      draggable 
                      onDragStart={(e) => handleDragStart(e, index)}
                      onDragOver={(e) => handleDragOver(e, index)}
                      onDrop={(e) => handleDrop(e, index)}
                      className={`relative bg-white border-l-4 rounded shadow-sm p-4 transition duration-200 group ${draggedItemIndex === index ? 'opacity-40 border-dashed border-gray-400' : 'border-indigo-500 border-gray-200'}`}
                    >
                      {/* Drag Handle & Header */}
                      <div className="flex justify-between items-center mb-3">
                        <div className="flex items-center cursor-move text-gray-500 hover:text-indigo-600">
                          <GripVertical className="h-5 w-5 mr-2" />
                          <span className="font-bold text-indigo-700 uppercase tracking-wide text-sm">{step.type}</span>
                        </div>
                        <div className="flex items-center space-x-4">
                          <div className="flex items-center">
                            <Clock className="h-4 w-4 text-gray-400 mr-1" />
                            <input 
                              type="text" 
                              value={step.duration} 
                              onChange={(e) => updateStep(index, 'duration', e.target.value)}
                              className="w-16 text-sm border-b border-gray-300 focus:border-indigo-500 outline-none bg-transparent text-right font-medium text-gray-600"
                            />
                          </div>
                          <button onClick={() => removeStep(index)} className="text-gray-300 hover:text-red-600 transition">
                            <Trash2 className="h-4 w-4" />
                          </button>
                        </div>
                      </div>

                      {/* Content Fields */}
                      <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                          <label className="text-xs font-semibold text-gray-400 uppercase">Activité Professeur</label>
                          <textarea 
                            value={step.profActivity} 
                            onChange={(e) => updateStep(index, 'profActivity', e.target.value)}
                            className="w-full mt-1 p-2 text-sm border rounded bg-gray-50 focus:bg-white focus:ring-1 focus:ring-indigo-500 outline-none resize-none h-20"
                            placeholder="Le prof explique..."
                          />
                        </div>
                        <div>
                          <label className="text-xs font-semibold text-gray-400 uppercase">Activité Élèves</label>
                          <textarea 
                            value={step.studentActivity} 
                            onChange={(e) => updateStep(index, 'studentActivity', e.target.value)}
                            className="w-full mt-1 p-2 text-sm border rounded bg-gray-50 focus:bg-white focus:ring-1 focus:ring-indigo-500 outline-none resize-none h-20"
                            placeholder="L'élève écoute et..."
                          />
                        </div>
                      </div>
                      
                      <div className="grid grid-cols-1 md:grid-cols-2 gap-4 mt-2">
                        <div>
                          <label className="text-xs font-semibold text-gray-400 uppercase">Méthode Pédagogique</label>
                           <input 
                              type="text" 
                              value={step.method} 
                              onChange={(e) => updateStep(index, 'method', e.target.value)}
                              className="w-full mt-1 p-1 text-sm border-b border-gray-200 focus:border-indigo-500 outline-none bg-transparent"
                              placeholder="ex: Active, Expositive"
                            />
                        </div>
                         <div>
                          <label className="text-xs font-semibold text-gray-400 uppercase">Ressources</label>
                           <input 
                              type="text" 
                              value={step.resources} 
                              onChange={(e) => updateStep(index, 'resources', e.target.value)}
                              className="w-full mt-1 p-1 text-sm border-b border-gray-200 focus:border-indigo-500 outline-none bg-transparent"
                              placeholder="ex: Tableau, PC"
                            />
                        </div>
                      </div>

                    </div>
                  ))}
                  
                  {fiche.deroulement.length === 0 && (
                    <div className="text-center p-8 border-2 border-dashed border-gray-300 rounded-lg text-gray-400">
                      Aucune étape. Ajoutez-en une ci-dessus.
                    </div>
                  )}
                </div>
              </div>
            </div>

        </div>

        {/* PREVIEW MODE (Visible aussi en CSS print) */}
        <div id="print-area" className={`${activeTab === 'preview' ? 'block' : 'hidden'} animate-fadeIn`}>
          <div className="flex justify-center">
            <div id="fiche-preview-content" className="bg-white shadow-2xl p-8 max-w-[21cm] w-full min-h-[29.7cm] text-black print:shadow-none print:w-full print:max-w-none print:p-0 print:m-0">
              
              {/* Header Fiche */}
              <div className="border-b-2 border-black pb-4 mb-6 flex justify-between items-start">
                <div className="w-2/3">
                  <h1 className="text-2xl font-bold uppercase tracking-wider mb-2">Fiche Pédagogique</h1>
                  <p className="font-bold text-lg">{fiche.etablissement}</p>
                  <p className="text-sm">Professeur : {fiche.professeur}</p>
                </div>
                <div className="w-1/3 text-right">
                  <p className="text-sm font-semibold">{fiche.date}</p>
                  <p className="text-sm">Discipline : Informatique</p>
                  <p className="text-sm">Niveau : {fiche.niveau}</p>
                </div>
              </div>

              {/* Titre et Module */}
              <div className="mb-6 text-center bg-gray-100 p-4 border border-gray-300 rounded">
                <p className="text-sm uppercase text-gray-600 mb-1">Module : {fiche.module}</p>
                <h2 className="text-xl font-bold uppercase underline">{fiche.titre}</h2>
              </div>

              {/* I. Présentation */}
              <div className="mb-6">
                <h3 className="text-lg font-bold bg-gray-200 px-2 py-1 border-l-4 border-black mb-3 uppercase">I. Présentation de la séance</h3>
                <table className="w-full border-collapse text-sm">
                  <tbody>
                    <tr className="border-b border-gray-300">
                      <td className="font-bold py-2 w-1/4 align-top">Compétence visée :</td>
                      <td className="py-2 w-3/4 align-top">{fiche.competence}</td>
                    </tr>
                    <tr className="border-b border-gray-300">
                      <td className="font-bold py-2 align-top">Prérequis :</td>
                      <td className="py-2 align-top">{fiche.prerequis}</td>
                    </tr>
                    <tr className="border-b border-gray-300">
                      <td className="font-bold py-2 align-top">Objectifs Généraux :</td>
                      <td className="py-2 align-top">{fiche.objectifsGeneraux}</td>
                    </tr>
                    <tr>
                      <td className="font-bold py-2 align-top">Objectifs Spécifiques :</td>
                      <td className="py-2 align-top">
                         {/* Safe rendering check */}
                         {fiche.objectifsSpecifiques && (
                          <ul className="list-disc pl-5">
                            {fiche.objectifsSpecifiques.split('\n').map((obj, i) => (
                              obj.trim() && <li key={i}>{obj.replace(/^- /, '')}</li>
                            ))}
                          </ul>
                         )}
                      </td>
                    </tr>
                  </tbody>
                </table>
              </div>

              {/* II. Organisation */}
              <div className="mb-6">
                <h3 className="text-lg font-bold bg-gray-200 px-2 py-1 border-l-4 border-black mb-3 uppercase">II. Organisation de la séance</h3>
                <table className="w-full border-collapse text-sm border border-gray-400">
                  <tbody>
                    <tr>
                      <td className="border border-gray-400 p-2 font-bold bg-gray-50 w-1/4">Durée</td>
                      <td className="border border-gray-400 p-2 w-1/4">{fiche.duree}</td>
                      <td className="border border-gray-400 p-2 font-bold bg-gray-50 w-1/4">Modalité</td>
                      <td className="border border-gray-400 p-2 w-1/4">{fiche.modalite}</td>
                    </tr>
                    <tr>
                      <td className="border border-gray-400 p-2 font-bold bg-gray-50">Moyens Matériels</td>
                      <td className="border border-gray-400 p-2" colSpan="3">{fiche.moyensMateriels}</td>
                    </tr>
                    <tr>
                      <td className="border border-gray-400 p-2 font-bold bg-gray-50">Ressources Numériques</td>
                      <td className="border border-gray-400 p-2" colSpan="3">{fiche.ressourcesNumeriques}</td>
                    </tr>
                    <tr>
                      <td className="border border-gray-400 p-2 font-bold bg-gray-50">Préparation Enseignant</td>
                      <td className="border border-gray-400 p-2" colSpan="3">{fiche.preparation}</td>
                    </tr>
                  </tbody>
                </table>
              </div>

              {/* III. Déroulement */}
              <div>
                <h3 className="text-lg font-bold bg-gray-200 px-2 py-1 border-l-4 border-black mb-3 uppercase">III. Déroulement de la séance</h3>
                <table className="w-full border-collapse border border-black text-sm">
                  <thead>
                    <tr className="bg-gray-100">
                      <th className="border border-black p-2 w-24">Étapes / Durée</th>
                      <th className="border border-black p-2">Activité du Professeur</th>
                      <th className="border border-black p-2">Activité des Élèves</th>
                      <th className="border border-black p-2 w-24">Méthode</th>
                      <th className="border border-black p-2 w-24">Ressources</th>
                    </tr>
                  </thead>
                  <tbody>
                    {fiche.deroulement.map((step, idx) => (
                      <tr key={step.id}>
                        <td className="border border-black p-2 text-center align-top bg-gray-50 font-bold">
                          {step.type}
                          <div className="font-normal text-xs text-gray-600 mt-1 border-t border-gray-300 pt-1">{step.duration}</div>
                        </td>
                        <td className="border border-black p-2 align-top whitespace-pre-wrap">{step.profActivity}</td>
                        <td className="border border-black p-2 align-top whitespace-pre-wrap">{step.studentActivity}</td>
                        <td className="border border-black p-2 align-top text-center">{step.method}</td>
                        <td className="border border-black p-2 align-top text-center">{step.resources}</td>
                      </tr>
                    ))}
                  </tbody>
                </table>
              </div>

              {/* Footer */}
              <div className="mt-8 pt-4 border-t border-gray-400 text-xs text-center text-gray-500 flex justify-between">
                <span>Généré le {new Date().toLocaleDateString()}</span>
                <span>Enseignant : {fiche.professeur}</span>
              </div>

            </div>
          </div>
        </div>
      </main>

      {/* Styles globaux et d'impression */}
      <style jsx global>{`
        @media print {
          @page { margin: 0.5cm; size: A4; }
          body { background: white; visibility: hidden; }
          /* Masquer tout le reste */
          header, button, .hidden, .lg\\:grid-cols-3 { display: none !important; }
          /* Afficher uniquement la zone d'impression */
          #print-area, #print-area * {
            visibility: visible;
          }
          #print-area {
            display: block !important;
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
            margin: 0;
            padding: 0;
          }
          #fiche-preview-content {
            box-shadow: none !important;
            padding: 0 !important;
            max-width: 100% !important;
            width: 100% !important;
          }
        }
        .animate-fadeIn {
          animation: fadeIn 0.4s ease-out;
        }
        @keyframes fadeIn {
          from { opacity: 0; transform: translateY(10px); }
          to { opacity: 1; transform: translateY(0); }
        }
      `}</style>
    </div>
  );
}
